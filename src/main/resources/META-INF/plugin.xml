<idea-plugin>
    <id>org.example.dependency_inserter</id>
    <name>Find dependencies in mvnrepository and inject them where you want them.</name>
    <vendor email="ajufresh@gmail.com" url="https://github.com/shinsunyoung/gradle-dependency-helper.git">Github</vendor>

    <description>
        Find dependencies in mvnrepository and inject them where you want them.
    </description>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
    </extensions>

    <actions>

        <action id="action.impl.Changer" class="action.impl.Changer" text="Make action in editor!">
            <keyboard-shortcut first-keystroke="ctrl shift d" keymap="$default"/>
        </action>

    </actions>


</idea-plugin>

